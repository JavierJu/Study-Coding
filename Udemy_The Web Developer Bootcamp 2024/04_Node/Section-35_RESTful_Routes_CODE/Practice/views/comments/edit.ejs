<body>
    <h1>Edit</h1>
    <form action="/comments/<%= comment.id %>?_method=PATCH" method="post">
        <section>
            <textarea name="comment" id="" cols="40" rows="5">
                <%= comment.comment %>
            </textarea>
        </section>
        <button type="submit">Save</button>
    </form>
    <a href="http://localhost:3000/comments/<%= comment.id %>">View your comment!</a>
    <br>
    <a href="http://localhost:3000/comments">View all comments!</a>

</body>

</html>